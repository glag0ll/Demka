<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Views.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="WpfApp1.Views.Pages.productDataPage"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="productDataPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="15,25,0,0" VerticalAlignment="Top">
            <Border BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="10" 
                Background="#F9F9F9"
                Width="160" 
                Height="160"
                ClipToBounds="True">
                <ui:Image Source="/shopResources/picture.png" 
                      Margin="5"
                      CornerRadius="8"
                      x:Name="productImage"/>
            </Border>
            <ui:Button Content="Изменить фото" 
                   Appearance="Secondary" 
                   Margin="0,10,0,0" 
                   HorizontalAlignment="Center"
                   FontSize="11" 
                   x:Name="changeImage" Click="changeImage_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10,15,20,10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="5">
                    <ui:TextBlock Text="Название" Margin="0,0,0,3"/>
                    <ui:TextBox PlaceholderText="Введите название товара" x:Name="productName"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5">
                    <ui:TextBlock Text="Артикул" Margin="0,0,0,3"/>
                    <ui:TextBox PlaceholderText="000000" x:Name="productArticle"/>
                </StackPanel>
            </Grid>

            <StackPanel Margin="5">
                <ui:TextBlock Text="Категория" Margin="0,0,0,3"/>
                <ComboBox Padding="5" SelectedValuePath="Id" DisplayMemberPath="Name" x:Name="productCategory" Foreground="Black"/>
            </StackPanel>

            <StackPanel Margin="5">
                <ui:TextBlock Text="Описание" Margin="0,0,0,3"/>
                <ui:TextBox Height="80" 
                        Padding="5" 
                        TextWrapping="Wrap" 
                        AcceptsReturn="True" 
                        VerticalContentAlignment="Top"
                        x:Name="productDescription"
                        PlaceholderText="Опишите характеристики товара..."/>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="5">
                    <ui:TextBlock Text="Производитель" Margin="0,0,0,3"/>
                    <ComboBox Padding="5" x:Name="productManufacturer" SelectedValuePath="Id" DisplayMemberPath="Name" TextElement.Foreground="Black"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5">
                    <ui:TextBlock Text="Поставщик" Margin="0,0,0,3"/>
                    <ComboBox Padding="5" SelectedValuePath="Id" DisplayMemberPath="Name" x:Name="productSupplier" TextElement.Foreground="Black">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="5">
                    <ui:TextBlock Text="Цена" Margin="0,0,0,3"/>
                    <ui:NumberBox PlaceholderText="0.00" x:Name="productPrice"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5">
                    <ui:TextBlock Text="Скидка" Margin="0,0,0,3"/>
                    <ui:NumberBox x:Name="productDiscount"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="5">
                    <ui:TextBlock Text="Количество" Margin="0,0,0,3"/>
                    <ui:NumberBox x:Name="productQuantity"/>
                </StackPanel>
                <StackPanel Grid.Column="3" Margin="5">
                    <ui:TextBlock Text="Ед. изм." Margin="0,0,0,3"/>
                    <ui:TextBox PlaceholderText="шт." x:Name="productUnit"/>
                </StackPanel>
            </Grid>
            <ui:Button Content="Сохранить" 
                   Appearance="Primary"
                   x:Name="buttonSave"
                   Width="150" 
                   Height="40" 
                   HorizontalAlignment="Right"
                   Foreground="Black"
                   Click="buttonSave_Click"
                   Margin="5,2,5,5"/>
            <ui:Button Content="Удалить" 
                   Appearance="Primary"
                   x:Name="buttonDelete"
                   Width="150" 
                   Height="40" 
                   HorizontalAlignment="Right"
                   Foreground="Black"
                   Click="buttonDelete_Click"
                   Margin="5,2,5,5"/>
        </StackPanel>
    </Grid>
</Page>

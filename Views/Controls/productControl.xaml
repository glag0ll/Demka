<UserControl x:Class="WpfApp1.Views.Controls.productControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views.Controls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid x:Name="gridMain" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderThickness="1" BorderBrush="Black">
            <ui:Image x:Name="imgPhoto" Width="125" Stretch="UniformToFill"/>
        </Border>
        <Border Grid.Column="1" BorderThickness="1" BorderBrush="Black"/>
        <Border Grid.Column="2" BorderThickness="1" BorderBrush="Black"/>
        <StackPanel Grid.Column="1" Margin="10,5,5,5">
            <ui:TextBlock x:Name="txtId" Visibility="Collapsed"/>
            <ui:TextBlock x:Name="txtName" FontWeight="Bold" FontSize="14"/>
            <ui:TextBlock x:Name="txtDescription"/>
            <ui:TextBlock x:Name="txtManufactirer"/>
            <ui:TextBlock x:Name="txtSupplier"/>
            <StackPanel Orientation="Horizontal">
                <ui:TextBlock Text="Цена"/>
                <ui:TextBlock x:Name ="txtPrice" Foreground="Red" TextDecorations="Strikethrough"/>
                <ui:TextBlock x:Name = "txtFinalPrice"/>
            </StackPanel>
            <ui:TextBlock x:Name="txtUnit"/>
            <ui:TextBlock x:Name="txtQuantity"/>
        </StackPanel>
        <ui:TextBlock Grid.Column="2" x:Name="txtDiscount" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0,10,0" FontSize="20"/>
    </Grid>
</UserControl>
